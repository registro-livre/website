<h1>Listing empresas</h1>

<table>
  <thead>
    <tr>
      <th>Cnpj</th>
      <th>Nire</th>
      <th>Nome</th>
      <th>Data constituicao</th>
      <th>Endereco</th>
      <th>Uf</th>
      <th>Cidade</th>
      <th>Cep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empresas.each do |empresa| %>
      <tr>
        <td><%= empresa.cnpj %></td>
        <td><%= empresa.nire %></td>
        <td><%= empresa.nome %></td>
        <td><%= empresa.data_constituicao %></td>
        <td><%= empresa.endereco %></td>
        <td><%= empresa.uf %></td>
        <td><%= empresa.cidade %></td>
        <td><%= empresa.cep %></td>
        <td><%= link_to 'Show', empresa %></td>
        <td><%= link_to 'Edit', edit_empresa_path(empresa) %></td>
        <td><%= link_to 'Destroy', empresa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

